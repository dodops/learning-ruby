<header class="main-header">
  <nav class="navbar navbar-static-top">
    <div class="container">
        <div class="navbar-header">
          <a href="#" class="navbar-brand"><b>Ruby</b> Zica</a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <i class="fa fa-bars"></i>
          </button>
        </div>
        <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to "Home", root_path %></li>
            <li><%= link_to t('header.join_us') %></li>
            <li><%= link_to t('header.about_project'), about_path %></li>
          </ul>
        </div>
        <div class="navbar-custom-menu">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav">
            <!-- User Account Menu -->
            <li class="dropdown user user-menu">
              <!-- Menu Toggle Button -->
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <!-- The user image in the navbar-->
								<%= image_tag attachment_url(current_user, :profile_image, :fill, 30, 30, fallback: 'profile.png'), class: 'user-image' %>
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
								<span class="hidden-xs"><%= current_user.first_name %></span>
              </a>
              <ul class="dropdown-menu">
                <!-- The user image in the menu -->
                <li class="user-header">
									<%= image_tag attachment_url(current_user, :profile_image, :fill, 100, 100, fallback: 'profile.png'), class: 'img-circle' %>
                  <p>
                    <%= current_user.email %>
                    <small><%=t('header.member_since') %> Nov. 740 A.C.</small>
                  </p>
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                    <%= link_to t('header.profile'), edit_user_registration_path(current_user), :class => 'btn btn-default btn-flat' %>
                  </div>
                  <div class="pull-right">
                    <%= link_to t('header.logout'), destroy_user_session_path, method: :delete, :class => 'btn btn-default btn-flat'  %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-default btn-flat'  %>
            <%= link_to "Login", new_user_session_path, :class => 'btn btn-default btn-flat'  %>
          <% end %>
        </div>
    </div>
  </nav>
</header>
